<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TableLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button

                    android:id="@+id/one"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/one"
                    android:onClick="onClick"
                    android:text="@string/one"
                    android:textSize="50dp" />


                <Button
                    android:id="@+id/two"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/two"
                    android:onClick="onClick"
                    android:text="@string/two"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/three"
                    android:onClick="onClick"
                    android:text="@string/three"
                    android:textSize="50dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/four"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/four"
                    android:onClick="onClick"
                    android:text="@string/four"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/five"
                    android:onClick="onClick"
                    android:text="@string/five"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/six"
                    android:onClick="onClick"
                    android:text="@string/six"
                    android:textSize="50dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/seven"
                    android:onClick="onClick"
                    android:text="@string/seven"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/eight"
                    android:onClick="onClick"
                    android:text="@string/eight"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/nine"
                    android:onClick="onClick"
                    android:text="@string/nine"
                    android:textSize="50dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="6"
                    android:gravity="center"
                    android:text="@string/result_human_wins"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/puntuaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/player_score_label"
                    android:text="@string/puntuacion_jugador"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/player_score"
                    android:paddingLeft="7dp"
                    android:paddingRight="20dp"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tie_score_label"
                    android:text="@string/puntuacion_partidas"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tie_score"
                    android:paddingLeft="7dp"
                    android:paddingRight="20dp"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/computer_score_label"
                    android:text="@string/puntuacion_maquina"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/computer_score"
                    android:paddingLeft="7dp"
                    android:paddingRight="20dp"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/NewGamebtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">>

                <Button
                    android:id="@+id/continuar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickContinuar"
                    android:text="@string/continuar_btn"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/new_game_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickNewGame"
                    android:text="@string/new_game_bnt"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>